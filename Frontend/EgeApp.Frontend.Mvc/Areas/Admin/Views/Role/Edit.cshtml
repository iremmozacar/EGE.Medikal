@model EgeApp.Frontend.Mvc.Models.Identity.CreateUserProfileViewModel
@{
    ViewData["PageHeader"] = "Kullanıcı Ekleme";
    ViewData["ShowButton"] = false;
    ViewData["ButtonTitle"] = "";
    ViewData["ButtonLink"] = "";
}

<div class="container py-5">
    <div class="p-4 rounded shadow-sm bg-white">
        <!-- Başlık -->
        <h2 class="text-center text-uppercase fw-bold mb-4" style="color: #002855;">Kullanıcı Ekleme</h2>

        <!-- Form -->
        <form asp-area="Admin" asp-controller="User" asp-action="Create" method="post">
            <div class="row g-4">
                <!-- Kullanıcı Bilgileri -->
                <div class="col-md-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header text-white" style="background-color: #002855;">
                            <h4 class="mb-0">Kullanıcı Bilgileri</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label text-dark fw-bold">Ad</label>
                                    <input asp-for="FirstName" class="form-control rounded-3">
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label text-dark fw-bold">Soyad</label>
                                    <input asp-for="LastName" class="form-control rounded-3">
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label text-dark fw-bold">Kullanıcı Adı</label>
                                <input asp-for="UserName" class="form-control rounded-3">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label text-dark fw-bold">E-posta</label>
                                <input asp-for="Email" class="form-control rounded-3">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label text-dark fw-bold">Telefon
                                    Numarası</label>
                                <input asp-for="PhoneNumber" class="form-control rounded-3">
                                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label text-dark fw-bold">Şifre</label>
                                <input asp-for="Password" type="password" class="form-control rounded-3">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="RePassword" class="form-label text-dark fw-bold">Şifre Tekrar</label>
                                <input asp-for="RePassword" type="password" class="form-control rounded-3">
                                <span class="text-danger" asp-validation-for="RePassword"></span>
                            </div>
                            <button type="submit" class="btn w-100 text-white fw-bold"
                                style="background-color: #820b15;">Kullanıcı Oluştur</button>
                        </div>
                    </div>
                </div>

                <!-- Roller -->
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header text-white" style="background-color: #820b15;">
                            <h4 class="mb-0">Roller</h4>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="text-center">Seçim</th>
                                        <th>Rol Adı</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <input @(Model.UserRoles.Any(x => x == role.Name) ? "checked" : "")
                                                    type="checkbox" class="form-check-input" name="UserRoles"
                                                    value="@role.Name">
                                            </td>
                                            <td>@role.Name</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <span class="text-danger">@ViewBag.ErrorRoleMessage</span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>