<!-- SOL MENÜ -->
<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/admin" class="brand-link">
        <img src="~/admin/dist/img/logoicon.svg" alt="ege-logo" class="brand-image img-circle elevation-3"
            style="opacity: .8">
        <span class="brand-text font-weight-light">Ege Medikal Admin</span>
    </a>
    <a href="/" target="_blank" class="brand-link">
        <img src="~/admin/dist/img/logoname.svg" alt="ege-logo" class="brand-image img-circle elevation-3"
            style="opacity: .8">
        <span class="brand-text font-weight-light">Uygulamaya Geç </span>
    </a>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/admin/dist/img/muhammedtopcu.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@User.Identity.Name</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Kategoriler -->
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-list-alt"></i> <!-- Kategori simgesi -->
                        <p>
                            Kategoriler
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Kategori Listesi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="nav-link">
                                <i class="far fa-plus-square nav-icon"></i> <!-- Kategori ekleme simgesi -->
                                <p>Kategori Ekle</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- Ürünler -->
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-cogs"></i> <!-- Ürün yönetimi simgesi -->
                        <p>
                            Ürünler
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Ürün Listesi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="nav-link">
                                <i class="far fa-plus-circle nav-icon"></i> <!-- Ürün ekleme simgesi -->
                                <p>Ürün Ekle</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- Siparişler -->
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-box"></i> <!-- Sipariş simgesi -->
                        <p>
                            Siparişler
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Order" asp-action="Index" asp-route-id=""
                                class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Tüm Siparişler</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Order" asp-action="Index" asp-route-id="0"
                                class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Yeni Siparişler</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- Kullanıcılar -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-users"></i> <!-- Kullanıcı simgesi -->
                        <p>
                            Kullanıcılar
                        </p>
                    </a>
                </li>
                <!-- Roller -->
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-user-shield"></i> <!-- Roller simgesi -->
                        <p>
                            Roller
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
