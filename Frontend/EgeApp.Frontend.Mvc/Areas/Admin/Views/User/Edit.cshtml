@model EgeApp.Frontend.Mvc.Models.Identity.UpdateUserProfileViewModel
@{
    ViewData["PageHeader"] = "Kullanıcı Güncelleme";
    ViewData["ShowButton"] = false;
    ViewData["ButtonTitle"] = "";
    ViewData["ButtonLink"] = "";
}

<div class="container py-5">
    <div class="bg-white p-5 rounded shadow-sm">
        <h2 class="text-center text-uppercase fw-bold mb-4" style="color: #002855;">Kullanıcı Güncelleme</h2>
        <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post">
            <input type="hidden" asp-for="UserId" />
            <div class="row g-4">
                <!-- Kullanıcı Bilgileri -->
                <div class="col-md-8">
                    <div class="card shadow-sm border-0">
                        <div class="card-header text-white" style="background-color: #002855;">
                            <h4 class="mb-0">Kullanıcı Bilgileri</h4>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-2">
                                    <label class="form-label text-dark">ID</label>
                                    <input asp-for="UserId" class="form-control form-control-sm" readonly>
                                </div>
                                <div class="col-md-5">
                                    <label asp-for="FirstName" class="form-label text-dark">Ad</label>
                                    <input asp-for="FirstName" class="form-control">
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                                <div class="col-md-5">
                                    <label asp-for="LastName" class="form-label text-dark">Soyad</label>
                                    <input asp-for="LastName" class="form-control">
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label text-dark">Kullanıcı Adı</label>
                                <input asp-for="UserName" class="form-control">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label text-dark">E-posta</label>
                                <input asp-for="Email" class="form-control">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label text-dark">Telefon Numarası</label>
                                <input asp-for="PhoneNumber" class="form-control">
                                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                            </div>
                            <button type="submit" class="btn w-100 mt-3" id="saveButton">Değişiklikleri Kaydet</button>
                        </div>
                    </div>
                </div>

                <!-- Roller -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-header text-white" style="background-color: #e63946;">
                            <h4 class="mb-0">Roller</h4>
                        </div>
                        <div class="card-body">
                            @foreach (var role in Model.Roles)
                            {
                                <div class="form-check mb-2">
                                    <input @(Model.UserRoles.Any(x => x == role.Name) ? "checked" : "") type="checkbox"
                                        class="form-check-input" name="UserRoles" value="@role.Name">
                                    <label class="form-check-label text-dark">@role.Name</label>
                                </div>
                            }
                            <span class="text-danger">@ViewBag.ErrorRoleMessage</span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Buton rengini dinamik olarak değiştirme
        document.addEventListener('DOMContentLoaded', () => {
            const saveButton = document.getElementById('saveButton');
            saveButton.style.backgroundColor = localStorage.getItem('saveButtonColor') || '#002855'; // Varsayılan Lacivert
            saveButton.style.color = '#ffffff'; // Yazı rengi beyaz

            // Eğer bir renk seçme özelliği eklenirse:
            // Renk seçme event'inde localStorage.setItem('saveButtonColor', yeniRenk) kullanılabilir.
        });
    </script>
}