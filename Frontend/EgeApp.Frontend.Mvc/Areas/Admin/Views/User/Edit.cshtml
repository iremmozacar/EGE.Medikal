@model EgeApp.Frontend.Mvc.Models.Identity.UpdateUserProfileViewModel
@{
    ViewData["PageHeader"] = "Kullanıcı Güncelleme";
    ViewData["ShowButton"] = false;
    ViewData["ButtonTitle"] = "";
    ViewData["ButtonLink"] = "";
}

<div class="card">
    <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post">
        <input type="hidden" asp-for="UserId" />
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-8 mt-1">
                    <h1 class="display-6 fs-4 fw-normal text-success">Kullanıcı Bilgileri Güncelleme</h1>
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control">
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control">
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control">
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <button type="submit" class="btn btn-primary text-white">Değişiklikleri
                        Kaydet</button>
                </div>

                <div class="col-md-4 mt-1">
                    <h1 class="display-6 fs-4 fw-normal text-success">Roller</h1>
                    @foreach (var role in Model.Roles)
                    {
                            <div class="form-check">
                                <input @(Model.UserRoles.Any(x => x == role.Name) ? "checked" : "") type="checkbox"
                                    class="form-check-input" name="UserRoles" value="@role.Name" />
                                <label class="form-check-label">@role.Name</label>

                            </div>
                    }
                    <span class="text-danger">@ViewBag.ErrorRoleMessage</span>
                </div>
            </div>
    </form>

</div>
</div>