@model EgeApp.Frontend.Mvc.Models.Product.ProductsCategoriesViewModel

<div class="container">
    <h1>Anasayfa</h1>

    <!-- Kategoriler -->
    <section class="categories-section">
        <h2>Kategoriler</h2>
        <ul>
            @foreach (var category in Model.CategoryList)
            {
                <li>@category.Name</li>
            }
        </ul>
    </section>

    <!-- İndirimdeki Ürünler -->
    <section class="discounted-products spad">
        <div class="section-title">
            <h4>Indirimdeki Ürünler</h4>
        </div>
        <div class="row">
            @foreach (var product in Model.DiscountedProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product-item">
                        <img src="@product.ImageUrl" alt="@product.Name" />
                        <h5>@product.Name</h5>
                        <p>@product.ProductDescription</p>
                        <span>Fiyat: $@product.Price</span>
                        @if (product.DiscountedPrice.HasValue)
                        {
                            <span>İndirimli: $@product.DiscountedPrice</span>
                        }
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Çok Satanlar -->
    <section class="best-sellers spad">
        <div class="section-title">
            <h4>Çok Satanlar</h4>
        </div>
        <div class="row">
            @foreach (var product in Model.BestSellers)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product-item">
                        <img src="@product.ImageUrl" alt="@product.Name" />
                        <h5>@product.Name</h5>
                        <p>@product.ProductDescription</p>
                        <span>Fiyat: $@product.Price</span>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

<!-- Best Sellers Section End -->

<script>
    function addToCart(productId) {
        alert("Ürün sepete eklendi: " + productId);
    }
</script>

<style>
    .product-item {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 16px;
        text-align: center;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

    .product-item:hover {
        transform: translateY(-10px);
    }

    .product-item-pic img {
        max-width: 100%;
        height: auto;
        margin-bottom: 15px;
        border-radius: 8px;
    }

    .product-item-text h6 {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .product-prices {
        font-size: 14px;
        margin-bottom: 15px;
    }

    .discounted-price {
        color: #e63946;
        font-weight: bold;
        margin-right: 10px;
    }

    .original-price {
        text-decoration: line-through;
        color: #aaa;
    }

    .add-to-cart-btn {
        background-color: #2a9d8f;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.2s;
    }

    .add-to-cart-btn:hover {
        background-color: #21867a;
    }
</style>