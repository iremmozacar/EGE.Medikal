@model EgeApp.Frontend.Mvc.Models.Product.ProductViewModel

<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="product__details__pic">
                    <img class="product__big__img" src="@Model.MainImage" alt="Main image">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product__details__text">
                    <h3>@Model.Name</h3>
                    <div class="rating">
                        <!-- Burada yıldız yorum sistemi eklenebilir -->
                    </div>
                    <div class="product__details__price">@Model.Price <span>@Model.DiscountedPrice</span></div>
                    <p>@Model.ProductDescription</p>
                    <div class="product__details__button">
                        <div class="quantity">
                            <span>Quantity:</span>
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                        <a href="#" class="cart-btn"><span class="icon_bag_alt"></span> Add to cart</a>
                    </div>

                    <div class="product__details__widget">
                        <ul>
                            <li>
                                <span>Stock Code:</span>
                                <p>@Model.StockCode</p>
                            </li>
                            <li>
                                <span>Warranty Period:</span>
                                <p>@Model.WarrantyPeriod</p>
                            </li>
                            <li>
                                <span>Discounted:</span>
                                <p>@if (Model.IsDiscounted)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }</p>
                            </li>
                            <li>
                                <span>Free Shipping:</span>
                                <p>@if (Model.IsFreeShipping)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }</p>
                            </li>
                            <li>
                                <span>Special Product:</span>
                                <p>@if (Model.IsSpecialProduct)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }</p>
                            </li>
                            <li>
                                <span>Same Day Shipping:</span>
                                <p>@if (Model.IsSameDayShipping)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }</p>
                            </li>
                            <li>
                                <span>Limited Stock:</span>
                                <p>@if (Model.IsLimitedStock)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }</p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- İlişkili Ürünler -->
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="related__title">
                    <h5>RELATED PRODUCTS</h5>
                </div>
            </div>
            @foreach (var relatedProduct in Model.RelatedProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@relatedProduct.MainImage">
                            <ul class="product__hover">
                                <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#">@relatedProduct.Name</a></h6>
                            <div class="product__price">@relatedProduct.Price</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Product Details Section End -->