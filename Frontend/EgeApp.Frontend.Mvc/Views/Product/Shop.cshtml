<section class="shop spad">
    <div class="container">
        <div class="row">
            <!-- Sidebar Başlangıcı -->
            <div class="col-lg-3 col-md-3">
                <div class="shop__sidebar">
                    <!-- Kategoriler -->
                    <div class="sidebar__categories">
                        <div class="section-title">
                            <h4>Kategoriler</h4>
                        </div>
                        <div class="categories__accordion">
                            <div class="accordion" id="accordionExample">
                                @if (Model.Categories != null && Model.Categories.Any())
                                {
                                    @foreach (var category in Model.Categories)
                                    {
                                        <div class="card">
                                            <div class="card-heading">
                                                <a data-toggle="collapse"
                                                    data-target="#collapse-@category.Name.Replace(" ", "")">
                                                    @category.Name
                                                </a>
                                            </div>
                                            <div id="collapse-@category.Name.Replace(" ", "")" class="collapse"
                                                data-parent="#accordionExample">
                                                <div class="card-body">
                                                    <ul>
                                                        <li><a href="#">Tüm Ürünler</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p>Kategori bulunamadı.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Sidebar Bitişi -->

            <!-- Ürünler Başlangıcı -->
            <div class="col-lg-9 col-md-9">
                <div class="row">
                    @if (Model.Products != null && Model.Products.Any())
                    {
                        @foreach (var product in Model.Products)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg="@product.ImageUrl">
                                        @if (product.IsOutOfStock)
                                        {
                                            <div class="label stockout stockblue">Stokta Yok</div>
                                        }
                                        @if (product.IsOnSale)
                                        {
                                            <div class="label">İndirim</div>
                                        }
                                        <ul class="product__hover">
                                            <li>
                                                <a href="@product.ImageUrl" class="image-popup">
                                                    <span class="arrow_expand"></span>
                                                </a>
                                            </li>
                                            <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                            <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6><a href="#">@product.Name</a></h6>
                                        <div class="product__price">
                                            $@product.Price
                                            @if (product.OldPrice.HasValue)
                                            {
                                                <span>$@product.OldPrice</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Ürün bulunamadı.</p>
                    }
                </div>

                <!-- Sayfalama -->
                <div class="col-lg-12 text-center">
                    <div class="pagination__option">
                        @if (Model.Pagination != null)
                        {
                            @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                            {
                                <a href="?page=@i" class="@(i == Model.Pagination.CurrentPage ? "active" : "")">@i</a>
                            }
                            @if (Model.Pagination.CurrentPage < Model.Pagination.TotalPages)
                            {
                                <a href="?page=@(Model.Pagination.CurrentPage + 1)"><i class="fa fa-angle-right"></i></a>
                            }
                        }
                        else
                        {
                            <p>Sayfa bilgisi bulunamadı.</p>
                        }
                    </div>
                </div>
            </div>
            <!-- Ürünler Bitişi -->
        </div>
    </div>
</section>