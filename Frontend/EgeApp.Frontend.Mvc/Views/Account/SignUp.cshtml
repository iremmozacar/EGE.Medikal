@model EgeApp.Frontend.Mvc.Models.Identity.SignUpViewModel
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4 py-5">
                <div class="col-md-4 m-auto mt-5">
                    <form asp-area="" asp-controller="Account" asp-action="SignUp" method="post">

                        <input asp-for="FirstName" class="w-100 form-control border-0 py-3 mb-1 mt-3" placeholder="Ad">
                        <span class="text-danger" asp-validation-for="FirstName"></span>

                        <input asp-for="LastName" class="w-100 form-control border-0 py-3 mb-1 mt-3"
                            placeholder="Soyad">
                        <span class="text-danger" asp-validation-for="LastName"></span>

                        <input asp-for="UserName" class="w-100 form-control border-0 py-3 mb-1 mt-3"
                            placeholder="Kullanıcı Adı">
                        <span class="text-danger" asp-validation-for="UserName"></span>

                        <input asp-for="Email" class="w-100 form-control border-0 py-3 mb-1 mt-3" placeholder="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>

                        <input asp-for="Password" class="w-100 form-control border-0 py-3 mb-1 mt-3"
                            placeholder="Parola">
                        <span class="text-danger" asp-validation-for="Password"></span>

                        <input asp-for="RePassword" class="w-100 form-control border-0 py-3 mb-1 mt-3"
                            placeholder="Parola Tekrar">
                        <span class="text-danger" asp-validation-for="RePassword"></span>

                        <button class="mt-3 w-100 btn form-control border-secondary py-3 bg-white text-primary "
                            type="submit">Kayıt Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
