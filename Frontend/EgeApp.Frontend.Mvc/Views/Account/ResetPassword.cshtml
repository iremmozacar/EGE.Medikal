@model EgeApp.Frontend.Mvc.Models.Identity.ResetPasswordViewModel

<div class="container">
    <div class="row justify-content-center py-5">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="bg-light p-5 rounded">
                <h3 class="text-center mb-4">Şifre Sıfırla</h3>
                <form asp-area="" asp-controller="Account" asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="TokenCode" />
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control border-0 py-3"
                            placeholder="Yeni parolanızı giriniz">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RePassword" class="form-label"></label>
                        <input asp-for="RePassword" type="password" class="form-control border-0 py-3"
                            placeholder="Yeni parolanızı tekrar giriniz">
                        <span class="text-danger" asp-validation-for="RePassword"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">Şifremi Sıfırla</button>
                </form>
            </div>
        </div>
    </div>
</div>
