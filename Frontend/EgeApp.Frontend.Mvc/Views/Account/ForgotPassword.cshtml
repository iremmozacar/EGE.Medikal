@model EgeApp.Frontend.Mvc.Models.Identity.ForgotPasswordViewModel

<div class="container">
    <div class="row justify-content-center py-5">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="bg-light p-5 rounded">
                <h3 class="text-center mb-4">Şifre Sıfırlama</h3>
                <form asp-area="" asp-controller="Account" asp-action="ForgotPassword" method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control border-0 py-3" placeholder="Email adresinizi giriniz">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">Gönder</button>
                    <p class="mt-3 text-center">Sistemde kayıtlı email adresinize şifre sıfırlama linki gönderilecektir.</p>
                </form>
            </div>
        </div>
    </div>
</div>
