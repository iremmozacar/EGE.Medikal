@model EgeApp.Frontend.Mvc.Models.Product.ProductsCategoriesViewModel

@{
    var categories = Model.CategoryList;
    var products = Model.ProductList;
}

    <!-- Product Section Start -->
    <div class="container-fluid product-section py-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h4>Ürünlerimiz</h4>
                    </div>
                    <div class="row g-4">
                        @foreach (var p in products)
                        {
                            <div class="col-md-6 col-lg-4 col-xl-3">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg="@p.ImageUrl">
                                        <ul class="product__hover">
                                            <li><a href="@p.ImageUrl" class="image-popup"><span
                                                        class="arrow_expand"></span></a></li>
                                            <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                            <li>
                                                <form asp-area="" asp-controller="Cart" asp-action="AddToCart">
                                                    <input type="hidden" name="ProductId" value="@p.Id" />
                                                    <button type="submit" class="btn btn-sm btn-primary">
                                                        <span class="icon_bag_alt"></span>
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6><a href="#">@p.Name</a></h6>
                                        <div class="rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <div class="product__price">@($"{p.Price:C0}")</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Product Section End -->
