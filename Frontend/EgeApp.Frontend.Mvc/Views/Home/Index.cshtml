@model EgeApp.Frontend.Mvc.Models.Product.ProductsCategoriesViewModel
@{
    var categories = Model.CategoryList;
    var products = Model.ProductList;
}

<!-- Hero Start -->
<div class="container-fluid py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-md-12 col-lg-7">
                <h4 class="mb-3 text-secondary">Güvenli Alışveriş</h4>
                <h1 class="mb-5 display-3 text-primary">Kaliteli ve ekonomik ürünler</h1>
                <div class="position-relative mx-auto">
                    <input class="form-control border-2 border-secondary w-75 py-3 px-4 rounded-pill" type="number"
                        placeholder="arama">
                    <button type="submit"
                        class="btn btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100"
                        style="top: 0; right: 25%;">Ara</button>
                </div>
            </div>
            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        @for (int i = 0; i < categories.Count; i++)
                        {
                                <div class="carousel-item rounded @(i==0 ? "active":"")">
                                    <img src="~/ui/img/hero-img-1.png" class="img-fluid w-100 h-100 bg-secondary rounded"
                                        alt="First slide">
                                    <a href="#" class="btn px-4 py-2 text-white rounded">@categories[i].Name</a>
                                </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->

<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-3">
    <div class="container py-3">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-12 text-start">
                    <h1>Ürünlerimiz</h1>
                </div>

            </div>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="row g-4">
                                @foreach (var p in products)
                                {
                                        <div class="col-md-6 col-lg-4 col-xl-3">
                                            <div class="rounded position-relative fruite-item">
                                                <a asp-area="" asp-controller="Product" asp-action="Details"
                                                    asp-route-id="@p.Id">
                                                    <div class="fruite-img border border-secondary border-bottom-0 rounded-top">
                                                        <img src="@p.ImageUrl" class="img-fluid rounded-top" alt="">
                                                    </div>
                                                </a>

                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                                    style="top: 10px; left: 10px;">
                                                @p.Category.Name
                                                </div>
                                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                    <h4>@p.Name</h4>
                                                    <p>@p.Properties</p>
                                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <p class="text-dark fs-5 fw-bold mb-0">@($"{p.Price:C0}")</p>
                                                        <form asp-area="" asp-controller="Cart" asp-action="AddToCart">

                                                            <input type="hidden" asp-for="@p.Id" name="ProductId" />
                                                            <button type="submit"
                                                                class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i
                                                                    class="fa fa-shopping-bag me-2 text-primary"></i> Sepete
                                                                Ekle</button>
                                                        </form>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->
