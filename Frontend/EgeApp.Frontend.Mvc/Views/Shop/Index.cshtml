@model List<EgeApp.Frontend.Mvc.Models.Product.ProductListViewModel>

<section class="shop spad">
    <div class="container">
        <div class="row">
            <!-- Ürünleri Listele -->
            @if (Model != null && Model.Any())
            {
                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product__item">
                            <!-- Ürün Fotoğrafı -->
                            <a href="@Url.Action("Details", "Shop", new { id = product.Id })" class="product__item__pic set-bg">
                                <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
                            </a>
                            <div class="product__item__text text-center">
                                <h6>
                                    <a href="@Url.Action("Details", "Shop", new { id = product.Id })">@product.Name ?? "Ürün Adı
                                        Yok"</a>
                                </h6>
                                <div class="product__price">
                                    @if (product.DiscountedPrice.HasValue)
                                    {
                                        <span>@($"{product.DiscountedPrice:C}")</span>
                                        <del>@($"{product.Price:C}")</del>
                                    }
                                    else
                                    {
                                        @($"{product.Price:C}")
                                    }
                                </div>
                                @if (product.IsFreeShipping == true)
                                {
                                    <span class="badge badge-success">Ücretsiz Kargo</span>
                                }
                                <form asp-controller="Shop" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn custom-btn btn-block mt-2">Sepete Ekle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center w-100">Gösterilecek ürün bulunamadı.</p>
            }
        </div>
        <!-- Sayfalama -->
        <div class="col-lg-12 text-center mt-4">
            <div class="pagination__option">
                <a href="#" class="active">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#"><i class="fa fa-angle-right"></i></a>
            </div>
        </div>
    </div>
</section>

<!-- CSS -->
<style>
    .product__item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        text-align: center;
    }

    .product__item:hover {
        transform: scale(1.03);
    }

    .product-image {
        height: 180px;
        width: 100%;
        object-fit: contain;
        /* Resmi ortantılı olarak boyutlandır */
        margin-bottom: 15px;
        border-radius: 8px;
    }

    .product__item__text h6 {
        font-size: 16px;
        margin-bottom: 10px;
    }

    .product__item__text h6 a {
        color: #333;
        text-decoration: none;
    }

    .product__item__text h6 a:hover {
        text-decoration: underline;
    }

    .product__price {
        font-size: 14px;
        color: #555;
        margin-bottom: 10px;
    }

    .custom-btn {
        background-color: #002147;
        color: #fff;
        border: none;
        padding: 10px;
        transition: transform 0.2s ease, background-color 0.3s ease, color 0.3s ease;
        text-transform: uppercase;
    }

    .custom-btn:hover {
        background-color: #003366;
        color: #fff;
        transform: scale(1.05);
    }

    .badge-success {
        background-color: #28a745;
        color: #fff;
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 12px;
        margin-bottom: 10px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .product__item .badge {
        margin-bottom: 10px;
    }
</style>